<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="mgr.entity">
	<class name="User" table="user">
		<id name="id" type="int" column="id">
			<generator class="identity" />
		</id>
		<property name="userid" type="string" column="userid"></property>
		<property name="userpwd" type="string" column="userpwd"></property>
		<property name="username" type="string" column="username"></property>
		<property name="userphone" type="long" column="userphone"></property>
		<property name="userdesc" type="string" column="userdesc"></property>
	</class>
</hibernate-mapping>